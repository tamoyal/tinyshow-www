<% event_title = @event["artist"]["name"] || @event["event"]["title"] %>
<% v = @event["venue"] %>
<% address_lines = [
	v["street_address"],
	"#{v["city"]}, #{v["region_abbr"]} #{v["postal_code"]}",
	v["neighborhood"],
] %>
<% google_maps_query = v["name"] + ", " + address_lines[0] + ", " + address_lines[1] %>
<% formatted_start_time = Time.parse(@event["event"]["starts_at"]).strftime("%A %m/%d at %l:%M%p") %>

<!DOCTYPE html>
<html>
<head>
	<title><%= event_title %></title>

	<%= erb :_fav_icon_links %>

	<link rel="stylesheet" type="text/css" href="/css/event.css">
	<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">

	<meta charset="UTF-8">
	<meta property="og:url" content="<%= @og.url %>" />
	<meta property="og:type" content="article" />
	<meta property="og:title" content="<%= @og.title %>" />
	<meta property="og:description" content="<%= @og.description %>" />
	<meta property="og:image" content="<%= @og.image %>" />
	<meta property="og:image:width" content="<%= @og.image_width %>" />
	<meta property="og:image:height" content="<%= @og.image_height %>" />
</head>
<body>
	<div class="top-banner">
		<a href="#">
			Listen to the band &amp; explore more shows with the free TinyShow iPhone app &raquo;
		</a>
	</div>

	<div id="main_content">
		<div class="fb-share-button" 
			data-href="<%= @og.url %>"
			data-layout="button"
			size="large">
		</div>

		<div class="artist-details">
			<div class="huge-font"><%= event_title %></div>
			<div
				class="big-font"
				style="margin-top: 6px;">
				@<%= v["name"] %>
			</div>
			<div class="big-font green" style="margin-top: 2px;">
				<%= @event["artist"]["genres"].join(',').upcase %>
			</div>
		</div>

		<div class="big-font start-time" style="">
			<i class="fa fa-arrow-right" aria-hidden="true"></i>
			<%= formatted_start_time %>
			<i class="fa fa-arrow-left" aria-hidden="true"></i>
		</div>

		<iframe
		  width="400"
		  height="300"
		  frameborder="0"
		  style="border:0"
		  src="https://www.google.com/maps/embed/v1/place?key=<%= GOOGLE_MAPS_API_KEY %>&amp;q=<%= google_maps_query %>"
		  allowfullscreen>
		</iframe>

		<div>
			<img src="<%= @og.image %>" />
		</div>
	</div>

	<!-- Load Facebook SDK for JavaScript -->
	<div id="fb-root"></div>
	<script>(function(d, s, id) {
	  var js, fjs = d.getElementsByTagName(s)[0];
	  if (d.getElementById(id)) return;
	  js = d.createElement(s); js.id = id;
	  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.5";
	  fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>
</body>
</html>
